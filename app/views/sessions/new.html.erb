<% provide(:title, "Sign In") %>

<h1>Sign In</h1>

<%= form_tag new_session_path do |f| %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Sign in" %>
<% end %>

<p>New user? <%= link_to "Sign up now!", new_user_url %></p>